<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMedica_Innovations.Views.IdeaDetailPage"
             Title="{Binding Title}">
    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout Spacing="20" Padding="15">
            <Label Text="First Name:" FontSize="Medium" />
            <Label Text="{Binding FirstName}" FontSize="Small"/>
            <Label Text="Last Name:" FontSize="Medium" />
            <Label Text="{Binding LastName}" FontSize="Small"/>
            <Label Text="Email:" FontSize="Medium" />
            <Label Text="{Binding Email}" FontSize="Small"/>
            <Label Text="Phone:" FontSize="Medium" />
            <Label Text="{Binding Phone}" FontSize="Small"/>
            <Label Text="Description:" FontSize="Medium" />
            <Label Text="{Binding Description}" FontSize="Small"/>
            <Label Text="Availability:" FontSize="Medium" />
            <Label Text="{Binding Availability}" FontSize="Small"/>
            <Label Text="Referral:" FontSize="Medium" />
            <Label Text="{Binding Referral}" FontSize="Small"/>
            <Label Text="Employee:" FontSize="Medium" />
            <Label Text="{Binding Employee}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>

</ContentPage>