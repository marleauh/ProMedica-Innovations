<?xml version="1.0" encoding="utf-8" ?>

<!--Terms of Service Page Format
    
    Use this file to make any design changes
    
-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMedica_Innovations.Views.TermsOfServicePage"
             Title="Terms Of Service">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="15,15,15,2">
                <Label Text="I agree to the terms of service:" FontSize="Medium" />
                <CheckBox IsChecked="{Binding Employee, Mode=TwoWay}" Color="{StaticResource Primary}" />
            </StackLayout>
            <WebView x:Name="webView" WidthRequest="1000" HeightRequest="1000" Source="https://www.promedica.org/innovations/Pages/innovation-submission.aspx"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>