<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMedica_Innovations.Views.InventorPage"
             Title="Inventors">
    <ContentPage.Content>
        <OnPlatform x:TypeArguments="View">
            <On Platform="Android">
                <ScrollView>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="300" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Row="0">
                            <Image Source="inventors_head.png" />
                            <Label TextColor="#ffffff" Text="Innovation Everywhere" TranslationY="-160" HorizontalTextAlignment="Center" FontSize="20" FontFamily="Avenir Book" />
                            <Label TextColor="#ffffff" Text="70,000 people, 70,000 minds. A world of possiblities." TranslationY="-160" FontSize="20" FontFamily="Avenir Book" HorizontalTextAlignment="Center"/>
                            <Rectangle BackgroundColor="#ffffff" HeightRequest="80" Scale="2" Rotation="-6" TranslationY="-90"/>
                            <Label Text="Where do great ideas come from?" TextColor="#151515" FontFamily="Avenir Heavy"  FontSize="25" TranslationY="-180" Margin="30,0,30,0"/>
                        </StackLayout>
                        <FlexLayout Grid.Row="1" TranslationY="-150">
                            <StackLayout>
                                <Image Source="inventors_top.png"
                               Margin="18,0,5,0" />
                            </StackLayout>
                            <StackLayout>
                                <Label Text="More than 70,000 people have contributed to ProMedica's success."
                               FontSize="15" Margin="10,0,15,10" FontFamily="Avenir Light" TextColor="#151515"/>
                                <Label Text="That's 70,000 people who've got what it takes to innovate. To invent."
                               FontSize="15" Margin="10,10,15,0" FontFamily="Avenir Light" TextColor="#151515"/>
                            </StackLayout>
                        </FlexLayout>
                        <StackLayout Grid.Row="1">
                            <Label Text="What we're looking for" TextColor="#151515" FontFamily="Avenir Heavy" FontSize="25" Margin="30,25,0,30"/>
                            <Label Text="We're looking for viable inventions that can become commercially-viable products within the life sciences, &#10;medical, or health information technology fields."
                           Margin="30,-20,0,0" TextColor="#151515" FontFamily="Avenir Light"/>
                        </StackLayout>
                        <FlexLayout Grid.Row="2" Margin="30,-150,30,0">
                            <StackLayout>
                                <Label Text="1. BE ORIGINAL" TextColor="#151515" FontSize="16" FontFamily="Avenir Heavy"/>
                                <Label Text="Not infringing on an existing patent" TextColor="#151515" FontSize="12" FontFamily="Avenir Light"/>
                            </StackLayout>
                            <StackLayout Margin="50,0,0,0">
                                <Label Text="3. BE PATENTABLE" TextColor="#151515" FontSize="16" FontFamily="Avenir Heavy"/>
                                <Label Text="Defined and protected by patent law" FontSize="12" TextColor="#151515"  FontFamily="Avenir Light"/>
                            </StackLayout>
                            </FlexLayout>
                            <FlexLayout Grid.Row="2" Margin="30,-60,30,0">
                                <StackLayout>
                                <Label Text="2. BE PRACTICAL" TextColor="#151515" FontSize="16" FontFamily="Avenir Heavy"/>
                                <Label Text="Functions in 'the real world' &#10;and  meet a clinical need." TextColor="#151515" FontSize="12" FontFamily="Avenir Light" />
                            </StackLayout>
                            <StackLayout Margin="25,0,0,0" TranslationX="15">
                                <Label Text="4. BE VIABLE" TextColor="#151515" FontSize="16" FontFamily="Avenir Heavy"/>
                                <Label Text="Potential to be &#10;commercially successful" TextColor="#151515" FontSize="12" FontFamily="Avenir Light"/>
                                </StackLayout>
                            </FlexLayout>
                        <StackLayout Grid.Row="2" Margin="0,40,0,0">
                            <Rectangle BackgroundColor="#43b02a" HorizontalOptions="Center" WidthRequest="230" HeightRequest="3" Margin="0,0,0,20"/>
                        </StackLayout>
                        <StackLayout Grid.Row="2" Margin="0,75,0,-15" HorizontalOptions="Center">
                            <Image Source="dollar.png" WidthRequest="100" HeightRequest="100" />
                            <Label Text="What's In It For You..." TextColor="#151515" HorizontalTextAlignment="Center" FontFamily="Avenir Heavy" FontSize="30" Margin="0,25,0,15"/>
                            <FlexLayout Margin="45,10,0,-20">
                                <Label Text="Inventors will receive " FontSize="18" Margin="-10,0,0,20" TextColor="#151515"  FontFamily="Avenir Light"/>
                                <Label Text="40%" FontSize="23" FontFamily="Avenir Heavy" TextColor="#151515" TranslationY="-5"/>
                                <Label Text=" of the result" FontSize="18" TextColor="#151515"  FontFamily="Avenir Light"/>
                            </FlexLayout>
                            <StackLayout  Margin="40,10,0,0">
                                <Label Text="-ing from the licensure of their invention." FontSize="18" TextColor="#151515"  FontFamily="Avenir Light"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Row="3" Margin="45,-70,30,0">
                            <Label Text="Inventors also are able to make bigger differences in more lives. By partnering with ProMedica, your invention has the potential to reach patients throughout the region, across the country, and around the world."
                               FontSize="18" HorizontalOptions="Center" TextColor="#151515"  FontFamily="Avenir Light"/>
                        </StackLayout>
                    </Grid>
                </ScrollView>
            </On>
